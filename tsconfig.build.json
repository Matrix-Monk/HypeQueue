{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": false,
    "outDir": "dist",
    "module": "ES2020",
    "target": "ES2020",
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["server.ts", "src/**/*"],
  "exclude": ["node_modules", ".next", "dist"]
}
